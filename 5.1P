import tkinter as tk
from gpiozero import LED

red = LED(27)
green = LED(4)
blue = LED(17)

def control_led(selected):
    red.off()
    green.off()
    blue.off()

    if selected == "Red":
        red.on()
    elif selected == "Green":
        green.on()
    elif selected == "Blue":
        blue.on()

def close_app(root):
    red.off()
    green.off()
    blue.off()
    root.destroy()

def create_gui():
    root = tk.Tk()
    root.title("LED Control")
    choice = tk.StringVar()

    tk.Radiobutton(
        root, text="Red LED", variable=choice, value="Red",
        command=lambda: control_led(choice.get())
    ).pack()

    tk.Radiobutton(
        root, text="Green LED", variable=choice, value="Green",
        command=lambda: control_led(choice.get())
    ).pack()

    tk.Radiobutton(
        root, text="Blue LED", variable=choice, value="Blue",
        command=lambda: control_led(choice.get())
    ).pack()

    tk.Button(
        root, text="Exit", command=lambda: close_app(root)
    ).pack()

    root.mainloop()

    def main() :
        create_gui()

    if __name__== "__main__"
        main()
